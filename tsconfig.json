{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "types": ["vite/client","node", "vite-plugin-svgr/client"],
    "paths": {
        "@sdk": ["./src/sdk"],
        "@common-components": ["./src/common-components"],
        "@widgets": ["./src/widgets"],
        "@assets": ["./src/assets"],
    }
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.stories.tsx", "./WidgetTemplate/**/*"]
}
